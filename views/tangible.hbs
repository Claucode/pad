{{#contentFor 'pageStyles'}}
  {{#unless production}}
    <link rel="stylesheet" href="/stylesheets/pad.css" />
  {{/unless}}
{{/contentFor}}

{{#contentFor 'pageScripts'}}
  {{#unless production}}
    <script src="/javascripts/blocks.js"></script>
  {{/unless}}
{{/contentFor}}

{{#with tangible}}
<div class="container">
  <article class="tangible">
    <h2>{{content.title}}</h2>
    <div class="row">
      <div class="col-sm-6">
        <img class="img-responsive" src="/package/{{uid}}/image/content" alt="{{content.title}}"/>
      </div>
      <div class="col-sm-6">
        <h4>Ficha TÃ©cnica</h4>
        <p>
          {{content.content}}
        </p>
        <div class="panel panel-default">
          <div class="panel-body text-center">
            <a class="btn btn-sm-lg" style="width: 100%;" href="/package/{{uid}}/content">
            <i class="icon-download"></i> Descargar contenido</a>
          </div>
        </div>
      </div>
    </div>
  </article>
</div>
{{/with}}